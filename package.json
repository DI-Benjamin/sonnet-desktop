{
  "name": "sonnet-desktop",
  "productName": "Sonnet Studio",
  "appId": "com.digitalindividuals.sonnetstudio",
  "copyright": "Copyright © 2025 Digital Individuals",
  "repository": "https://github.com/DI-Benjamin/sonnet-desktop",
  "publish": {
    "provider": "github",
    "releaseType": "release",
    "private": true,
    "owner": "DI-Benjamin",
    "repo": "sonnet-desktop",
    "token": "${GH_TOKEN}"
  },
  "build": {
    "appId": "com.digitalindividuals.sonnetstudio",
    "productName": "Sonnet Studio",
    "copyright": "Copyright © 2025 Digital Individuals",
    "mac": {
      "target": "dmg",
      "icon": "resources/AppIcon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "resources/AppIcon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/AppIcon.png"
    },
    "extraResources": [
      {
        "from": "resources/animations",
        "to": "animations",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "version": "1.0.1",
  "description": "Sonnet studio the local experience",
  "license": "ISC",
  "author": "Digital Individuals",
  "type": "commonjs",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --publish=always",
    "build:mac": "electron-builder --mac --publish=always",
    "build:linux": "electron-builder --linux --publish=always",
    "build:all": "electron-builder --mac --win --linux --publish=always",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@electron-forge/maker-dmg": "^7.8.3",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@rive-app/canvas": "^2.31.2",
    "electron-updater": "^6.6.2"
  }
}
